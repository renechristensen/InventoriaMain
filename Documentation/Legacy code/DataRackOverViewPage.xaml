<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:InventoriaMauiApp.ViewModels"
             x:DataType="viewmodel:DataRacksViewModel"
             x:Class="InventoriaMauiApp.Views.DataRackOverViewPage"
             Title="Data Rack Overview"
             BackgroundColor="#f0f0f0">

    <CollectionView ItemsSource="{Binding DataRacks}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10" RowDefinitions="Auto, Auto" ColumnDefinitions="*, Auto">
                    <Label Grid.Row="0" Grid.Column="0" Text="{Binding DatarackName}" FontSize="16" FontAttributes="Bold" />
                    <Label Grid.Row="1" Grid.Column="0" Text="{Binding RackStatus}" FontSize="14" />
                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding TotalUnits}" FontSize="14" />
                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding AvailableUnits}" FontSize="14" />
                    <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Text="Details" Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:DataRacksViewModel}}, Path=ViewDetailsCommand}" CommandParameter="{Binding .}" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
